{
	"ecmaFeatures": {
		"jsx": true,
		"modules": true
	},
	"rules": {
		"quotes": [2, "single"],
		"no-var": 2,
		"prefer-const": 1,
		"eqeqeq": 2,
		"no-console": 0,
		"indent": [2, "tab", {"SwitchCase" : 1}],
		"no-extra-parens": 2,
		"default-case": 2,
		"no-multi-spaces": 2,
		"comma-spacing": [2, {
			"before": false,
			"after": true
		}],
		"computed-property-spacing": [2, "never"],
		"semi": 2,
		"no-undef": 1,
		"no-unused-vars": 1,
		"react/prop-types": [2, { "ignore": ["children", "match", "history"] }],
		"keyword-spacing": 2,
		"object-curly-spacing": [2, "always"],
		"array-bracket-spacing": [2, "always"],
		"jsx-quotes": [2, "prefer-double"]
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true
	}
}
